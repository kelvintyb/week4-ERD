<%# this is the passenger details form%>
<% include partials/header.ejs  %>

<h2>Hello, new passenger!</h2>

<form method="post" action="/users">
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" id="name" name="username" placeholder="Enter your full name">
  </div>
  <div class="form-group">
    <label for="contact">Contact</label>
    <input type="number" class="form-control" id="contact" name="contact" placeholder="Enter your mobile">
  </div>
  <div class="form-group">
    <label for="pwd">Password</label>
    <input type="password" class="form-control" id="pwd" name="userpwd" placeholder="Password">
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>

<h4>SIALAH Airlines reserves all rights to suddenly change flight details such as dates and destinations. Take at your own risk.</h4>

